
@model WebApp1._0.Models.DBContext
@using System.Data;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="widget flat radius-bordered">
                        <div class="widget-header bg-blue">
                            <span class="widget-caption">Scheme</span>
                        </div>
                        <div class="widget-body">
                            <div id="registration-form">
                                @using (Html.BeginForm("SaveSchema", "Scheme", FormMethod.Post))
                                {
                                    <div class="table-toolbar">
                                        <a id="editabledatatable_new" class="btn btn-success" onclick="addNewRow();">
                                            Add Scheme
                                        </a>
                                    </div>
                                    <table class="table table-striped table-bordered table-hover" id="simpledatatable">
                                        <thead>
                                            <tr role="row">
                                                <th>Scheme Code</th>
                                                <th>Scheme Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>

                                        <tbody id="newRow">
                                            @foreach (DataRow row in Model.resultData.Rows)
                                            {
                                                <tr>
                                                    <input type="hidden" name="schemeid" id="schemeid" value="" />
                                                    <td>
                                                        <label id="scode-@row[0]" name="scode">@row[1]</label>
                                                        <input type="hidden" id="hdnscodes-@row[0]" value="@row[1]" class="form-control" />
                                                    </td>
                                                    <td>
                                                        <label id="sname-@row[0]" name="sname">@row[2]</label>
                                                        <input type="hidden" id="hdnsname-@row[0]" value="@row[2]" class="form-control" />
                                                    </td>
                                                    <td>
                                                        <span id="editdelete-@row[0]">
                                                            <a class="btn btn-info btn-xs edit" id="edit-@row[0]" onclick="editScheme(@row[0]);"><i class="fa fa-edit"></i> Edit</a>
                                                            <a class="btn btn-danger btn-xs delete" id="delete-@row[0]" onclick="deleteScheme(@row[0]);"><i class="fa fa-trash-o"></i> Delete</a>
                                                        </span>
                                                        <span id="editCancel-@row[0]">

                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#simpledatatable').DataTable();
        if ('@Model.usermessage' != '') {
            var message = '@Model.usermessage';
            if (message != null && message != "") {
                alert(message);
            }
        }

    });

    function editScheme(id) {
        alert(id);
        $.ajax({
            type: "post",
            url: '@Url.Action("editScheme", "Scheme")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                if (data.obj_scheme != '') {
                    $("#editCancel-" + id).html("");
                    $("#schemeid").val(id);
                    $.each($.parseJSON(data.obj_scheme), function (key, value) {
                        $("#scode-" + id).css("display", "none");
                        $("#hdnscodes-" + id).attr("type", "text");
                        $("#hdnscodes-" + id).attr("name", "schemecode");

                        $("#sname-" + id).css("display", "none");
                        $("#hdnsname-" + id).attr("type", "text");
                        $("#hdnsname-" + id).attr("name", "schemename");

                        $("#editCancel-" + id).append('<input type="submit" value="Update" name="Save" id="edits-'+id+'" class="btn btn-success btn-xs save" /> <a class="btn btn-warning btn-xs" id="cancels-' + id + '" cancel" onclick="replaceRow(' + id + ');"><i class="fa fa-times"></i> Cancel</a>').show();
                        $("#editdelete-"+id).css("display","none");
                    })
                }
            }
        });
    }
    function deleteScheme(id) {
        alert("Do you really want to delete this record ?")
        $.ajax({
            type: "post",
            url: '@Url.Action("deleteScheme", "Scheme")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                alert("Record successfully deleted");
                location.reload();
            }
        });
    }

    function addNewRow() {
        var appData = '';
        appData = '<tr>' +
                  '<td><input type="text" name="schemecode" id="schemecode" placeholder="Scheme Code" class="form-control" required/></td>' +
                  '<td><input type="text" name="schemename" id="schemename" placeholder="Scheme Name" class="form-control" required/></td>' +
                  '<td><input type="submit" value="Save" class="btn btn-success btn-xs save" name="Save" /> <a class="btn btn-warning btn-xs cancel" onclick="removeRow();"><i class="fa fa-times"></i> Cancel</a></td>' +
                  '</tr>';
        $('#newRow tr:first').before(appData);
    }

    function removeRow() {
        $('#simpledatatable tbody tr:first').css("display", "none");
    }
    function replaceRow(id)
    {
        $(".edit").removeAttr("disabled", "disabled");

        $("#hdnscodes-" + id).attr("type", "hidden");
        $("#scode-" + id).css("display", "block");

        $("#hdnsname-" + id).attr("type", "hidden");
        $("#sname-" + id).css("display", "block");

        $("#editCancel-" + id).css("display", "none");
        $("#editdelete-" + id).css("display", "block");
    }
</script>


