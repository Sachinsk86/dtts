@model WebApp1._0.Models.DBContext
@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  int i = 1;
}
<div class="page-body">
  <div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12">
      <div class="row">
        <div class="col-lg-6 col-sm-6 col-xs-12">
          <div class="widget flat radius-bordered">
            <div class="widget-header bg-blue">
              <span class="widget-caption">User Form</span>
            </div>
            <div class="widget-body">
              <div id="registration-form">
                <div class="form-title">User Information</div>
                @using (Html.BeginForm("Index", "User", FormMethod.Post))
                {
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="text" class="form-control" placeholder="Username" name="username" id="username">
                          <i class="fa fa-user"></i>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="email" class="form-control" placeholder="Email Address" name="useremailid" id="useremailid">
                          <i class="fa fa-user"></i>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="password" class="form-control" placeholder="Password" name="password" id="password">
                          <i class="fa fa-user"></i>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="password" class="form-control" placeholder="Confirm Password" name="confirmpassword" id="confirmpassword">
                          <i class="fa fa-user"></i>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form=group">
                        <span class="input-icon icon-right">
                          <select id="ref_organizationid" name="ref_organizationid" style="width:100%;">
                            <option value="" />Select Organozation
                            <option value="1" />Bescom
                            <option value="2" />Gescom
                            <option value="3" />Hescom
                          </select>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form=group">
                        <span class="input-icon icon-right">
                          <select id="ref_designationid" name="ref_designationid" style="width:100%;">
                            <option value="" />Select Designation
                            @foreach (var design in Model.obj_designation)
                            {
                              <option value="@design.designationid">@design.designationname</option>
                            }
                          </select>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="form-title">Personal Information</div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="text" class="form-control" placeholder="First Name" name="name" id="firstname">
                          <i class="fa fa-user"></i>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="text" class="form-control" placeholder="Last Name" id="lastname">
                          <i class="fa fa-user"></i>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="text" class="form-control" placeholder="Address">
                          <i class="fa fa-globe"></i>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="text" class="form-control" placeholder="Mobile" name="usermobileno" id="usermobileno">
                          <i class="glyphicon glyphicon-phone"></i>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <input type="text" class="form-control" placeholder="Landline" name="userlandlineno" id="userlandlineno">
                          <i class="glyphicon glyphicon-phone-alt"></i>
                        </span>
                      </div>
                    </div>

                  </div>
                  <div class="form-title">Location Information</div>
                  <div class="row">
                    <div class="col-sm-6 col-sm-6 col-xs-12">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <h6>Zone</h6>
                          <select id="zone" style="width:100%;">
                            <option value="" />Select Zone
                            @foreach (var zone in Model.obj_zone)
                            {
                              <option value="@zone.zoneid">@zone.zonename</option>
                            }
                          </select>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6 col-sm-6 col-xs-12">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <h6>Circle</h6>
                          <select id="circle" style="width:100%;"></select>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6 col-sm-6 col-xs-12">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <h6>Division</h6>
                          <select id="division" style="width:100%;"></select>
                        </span>
                      </div>
                    </div>
                    <div class="col-sm-6 col-sm-6 col-xs-12">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <h6>Sub Division</h6>
                          <select id="subdivision" style="width:100%;"></select>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6 col-sm-6 col-xs-12">
                      <div class="form-group">
                        <span class="input-icon icon-right">
                          <h6>Role</h6>
                          <select id="role" style="width:100%;" name="ref_roleid">
                            <option value="">Select Role</option>
                            <option value="1">MD</option>
                            <option value="2">DT</option>
                            <option value="3">CGM</option>
                            <option value="4">DGM</option>
                            <option value="5">TA</option>
                          </select>
                        </span>
                      </div>
                    </div>
                  </div>
                  <!--<div class="form-group">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" class="colored-blue">
                        <span class="text">Auto Sign In After Registration</span>
                      </label>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-blue" id="sub_user">Create User</button>-->
                  <input type="hidden" name="userid" id="userid" value="" />
                  <input type="submit" class="btn btn-blue" id="sub_user" value="Create User" name="Submit" />
                }
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-sm-6 col-xs-12">
          <div class="widget">
            <div class="widget-header widget-header bg-blue">
              <span class="widget-caption">Users List</span>
              <div class="widget-buttons">
                <a href="#" data-toggle="maximize">
                </a>
                <a href="#" data-toggle="collapse">
                </a>
                <a href="#" data-toggle="dispose">
                </a>
              </div>
            </div>
            <div class="widget-body">
              <table class="table table-striped table-bordered table-hover" id="simpledatatable">
                <thead>
                  <tr>
                    <th style="background-color:#F0EDE9!important;">Sl No.</th>
                    <th style="background-color:#F0EDE9!important;">Username</th>
                    <th style="background-color:#F0EDE9!important;">Email-Id</th>
                    <th style="background-color:#F0EDE9!important;">Designation</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  @foreach (var userResult in Model.obj_userView)
                  {
                    <tr>
                      <td>@i</td>
                      <td>@userResult.username</td>
                      <td>@userResult.useremailid</td>
                      <td>@userResult.designationname</td>
                      <td>
                        <a class="btn btn-success btn-xs save" title="View" onclick="getUsersOnId(@userResult.userid);"><i class="fa fa-save"></i></a>
                        <a class="btn btn-info btn-xs edit" title="Edit" onclick="editUsersDetails(@userResult.userid);"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-xs delete" title="Delete" onclick="deleteUser(@userResult.userid);"><i class="fa fa-trash-o"></i></a>
                      </td>
                    </tr>
                    i++;
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="bootbox modal fade modal-darkorange in" id="Udata" role="dialog" tabindex="-1" style="display: none;" aria-hidden="false">
  <div class="modal-dialog" style="width: 850px ! important;">
    <div class="modal-content">
      <div class="modal-header" style="background-color:#61bcfe; color:#fff;">
        <button class="bootbox-close-button close" aria-hidden="true" data-dismiss="modal" id="CloseBtn" type="button">×</button>
        <h4 class="modal-title">User Details</h4>
      </div>
      <div class="modal-body" style="overflow-y:scroll; height:450px;">
        <div class="bootbox-body">
          <div class="row" style="padding-bottom:50px;">
            <div class="col-md-12">
              <div class="col-md-12">
                <table id="example11" class="table table-bordered table-striped">
                  <tr>
                    <th colspan="6" style="color:skyblue;">User Information</th>
                  </tr>
                  <tr>
                    <td style="width:25%;"><b>Username </b></td>
                    <td style="width:25%;"><span id="user_name"></span></td>
                    <td style="width:25%;"><b>Email-Id</b></td>
                    <td style="width:25%;"><span id="email_id"></span></td>
                  </tr>
                  <tr>
                    <td style="width:25%;"><b>Organization </b></td>
                    <td style="width:25%;"><span id="orgnization"></span></td>
                    <td style="width:25%;"><b>Designation </b></td>
                    <td style="width:25%;"><span id="designation"></span></td>
                  </tr>
                  <tr>
                    <th colspan="6" style="color:skyblue;">Personal Information</th>
                  </tr>
                  <tr>
                    <td style="width:25%;"><b>First Name </b></td>
                    <td style="width:25%;"><span id="fname"></span></td>
                    <td style="width:25%;"><b>Last Name </b></td>
                    <td style="width:25%;"><span id="lname"></span></td>
                  </tr>
                  <tr>
                    <td style="width:25%;"><b>Mobile No. </b></td>
                    <td style="width:25%;"><span id="mobile_no"></span></td>
                    <td style="width:25%;"><b>Landline </b></td>
                    <td style="width:25%;"><span id="landline_no"></span></td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  $(document).ready(function () {
    var message = '@Model.usermessage';
    if (message != null && message != "") {
      alert(message);
    }
  });
  $("#zone").change(function () {
    var zoneId = $("#zone").val();
    $.ajax({
      type: "post",
      url: '@Url.Action("GetCircle", "Dashboard")',
      data: { ZoneId: zoneId },
      datatype: "json",
      success: function (data) {
        if (data.obj_circle != "") {
          $("#circle").html("");
          var appData = '';
          //var circId = '@Model.obj_location.ref_circleid';
          appData += '<option value="">Select Circle</option>';
          $.each(data.obj_circle, function (key, value) {
            appData += '<option value="' + value.circleid + '">' + value.circlename + '</option>';
          });
          $("#circle").append(appData);
          /*if (circId != "" && circId != 0) {
              $("#circle option[value='" + circId + "']").prop("selected", "selected");
              $("#circle").trigger("change");
          }*/
        }
      }
    });
  });

  $("#circle").change(function () {
    var circleId = $("#circle").val();
    $.ajax({
      type: "post",
      url: '@Url.Action("GetDivision", "Dashboard")',
      data: { circleId: circleId },
      datatype: "json",
      success: function (data) {
        if (data.obj_circle != "") {
          $("#division").html("");
          var appData = '';
          //var divId = '@Model.obj_location.ref_divisionid';
          appData += '<option value="">Select Division</option>';
          $.each(data.obj_division, function (key, value) {
            appData += '<option value="' + value.divisionid + '">' + value.divisionname + '</option>';
          });
          $("#division").append(appData);
          /*if (divId != "" && divId != 0) {
              $("#division option[value='" + divId + "']").prop("selected", "selected");
              $("#division").trigger("change");
          }*/
        }
      }
    });
  });

  $("#division").change(function () {
    var divisionId = $("#division").val();
    $.ajax({
      type: "post",
      url: '@Url.Action("GetSubDivision", "Dashboard")',
      data: { divisionId: divisionId },
      datatype: "json",
      success: function (data) {
        if (data.obj_subdivision != "") {
          $("#subdivision").html("");
          var appData = '';
          //var sbId = '@Model.obj_location.ref_subdivisionid';
          appData += '<option value="">Select Sub Division</option>';
          $.each(data.obj_subdivision, function (key, value) {
            appData += '<option value="' + value.subdivisionid + '">' + value.subdivisionname + '</option>';
          });
          $("#subdivision").append(appData);
          /*if (sbId != "" && sbId != 0) {
              $("#subdivision option[value='" + sbId + "']").prop("selected", "selected");
              $("#subdivision").trigger("change");
          }*/
        }
      }
    });
  });

  $("#subdivision").change(function () {
    var subdivisionId = $("#subdivision").val();
    $.ajax({
      type: "post",
      url: '@Url.Action("GetSection", "Dashboard")',
      data: { subdivisionId: subdivisionId },
      datatype: "json",
      success: function (data) {
        if (data.obj_section != "") {
          $("#section").html("");
          var appData = '';
          //var scId = '@Model.obj_location.ref_sectionid';
          appData += '<option value="">Select Section</option>';
          $.each(data.obj_section, function (key, value) {
            appData += '<option value="' + value.sectionid + '">' + value.sectionname + '</option>';
          });
          $("#section").append(appData);
          /*if (scId != "" && scId != 0) {
              $("#section option[value='" + scId + "']").prop("selected", "selected");
          }*/
        }
      }
    });
  });

  function getUsersOnId(id) {
    $("#Udata").css("display", "block");
    $.ajax({
      type: "post",
      url: '@Url.Action("getUsersOnId", "User")',
      data: { id: id },
      datatype: "json",
      success: function (data) {
        if (data.obj_user != '') {
          $.each(data.obj_user, function (key, value) {
            $("#user_name").html(value.username);
            $("#email_id").html(value.useremailid);
            $("#orgnization").html(value.organizationname);
            $("#designation").html(value.designationname);
            $("#fname").html(value.name);
            $("#lname")
            $("#mobile_no").html(value.usermobileno);
            $("#landline_no").html(value.userlandlineno);
          });
        }
      }
    });
  }
  function editUsersDetails(id) {
    $.ajax({
      type: "post",
      url: '@Url.Action("getUsersOnId", "User")',
      data: { id: id },
      datatype: "json",
      success: function (data) {
        if (data.obj_user != '') {
          $('#sub_user').attr('name', 'Update');
          $('#sub_user').attr('value', 'Update User');
          $.each(data.obj_user, function (key, value) {
            $("#userid").val(value.userid);
            $("#username").val(value.username);
            $("#useremailid").val(value.useremailid);
            $("#ref_designationid option[value='" + value.ref_designationid + "']").attr("selected", "selected");
            $("#firstname").val(value.name);
            $("#usermobileno").val(value.usermobileno);
            $("#userlandlineno").val(value.userlandlineno);
            $("#role option[value='" + value.ref_roleid + "']").attr("selected", "selected");
          });

        }
      }
    });
  }
  function deleteUser(id) {
    $.ajax({
      type: "post",
      url: '@Url.Action("DeleteUsers","User")',
      data: { id: id },
      datatType: 'json',
      success: function (data) {
        if (data.obj_delUser != '') {
          alert("Record Deleted Successfully");
        }
      }
    });
  }

  $("#CloseBtn").click(function () {
    $("#Udata").css("display", "none");
  });
</script>