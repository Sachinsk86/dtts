@model WebApp1._0.Models.DBContext
@using System.Data;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">

                    <div class="widget flat radius-bordered">
                        <div class="widget-header bg-blue">
                            <span class="widget-caption">Sub-Division</span>
                        </div>
                        <div class="widget-body">
                            <div id="registration-form">
                                <!--<div class="form-title">User Information</div>-->
                                @using (Html.BeginForm("SaveSubDiv", "SubDiv", FormMethod.Post))
                                {
                                    <div class="table-toolbar">
                                        <a id="editabledatatable_new" class="btn btn-success" onclick="addNewRow();">
                                            Add Sub Division
                                        </a>
                                    </div>
                                    <table class="table table-striped table-bordered table-hover" id="simpledatatable">
                                        <thead>
                                            <tr>
                                                <th>Division Name</th>
                                                <th>Sub-Division Code</th>
                                                <th>Sub-Division Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (DataRow row in Model.resultView.Rows)
                                            {
                                                <tr id="newRow">
                                                    <input type="hidden" name="subdivisionid" id="subdivisionid" value="" />
                                                    <td>
                                                        <label id="div_name-@row[0]">@row[4]</label>
                                                        <span id="div-@row[0]"></span>
                                                    </td>
                                                    <td id="code-@row[0]">
                                                        <label id="sdcodes-@row[0]">@row[1]</label>
                                                        <input type="hidden" id="hdnsdcodes-@row[0]" value="@row[1]" class="form-control" />
                                                    </td>
                                                    <td id="name-@row[0]">
                                                        <label id="sdname-@row[0]">@row[2]</label>
                                                        <input type="hidden" id="hdnsdname-@row[0]" value="@row[2]" class="form-control" />
                                                    </td>
                                                    <td>
                                                        <span id="editdelete-@row[0]">
                                                            <a class="btn btn-info btn-xs edit" id="edit-@row[0]" onclick="editSubDiv(@row[0]);"><i class="fa fa-edit"></i> Edit</a>
                                                            <a class="btn btn-danger btn-xs delete" id="delete-@row[0]" onclick="deleteSubDiv(@row[0]);"><i class="fa fa-trash-o"></i> Delete</a>
                                                        </span>
                                                        <span id="editCancel-@row[0]">

                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#simpledatatable').DataTable();
        var message = '@Model.usermessage';
        if (message != null && message != "") {
            alert(message);
        }
    });
    function editSubDiv(id) {
        $.ajax({
            type: "post",
            url: '@Url.Action("EditSubDiv", "SubDiv")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                if (data.obj_zone != '') {
                    if (data.obj_subdivs != '') {
                        $(".edit").attr("disabled", "disabled");
                        $("#editCancel-" + id).html("");
                        $("#subdivisionid").val(id);
                        $("#div-" + id).html("");
                        $("#div-" + id).append('<select name="ref_divisionid" id="ref_divisionid-' + id + '" class="form-control" required><option value="">Select Corporate</option>@foreach(DataRow corp in Model.resultData.Rows){<option value="@corp[0]">@corp[2]</option>}</select>').show();
                        $("#div_name-" + id).css("display", "none");
                        $.each($.parseJSON(data.obj_subdivs), function (key, value) {
                            $("#sdcodes-" + id).css("display", "none");
                            $("#hdnsdcodes-" + id).attr("type", "text");
                            $("#hdnsdcodes-" + id).attr("name", "zonecode");
                            $("#sdname-" + id).css("display", "none");
                            $("#hdnsdname-" + id).attr("type", "text");
                            $("#hdnsdname-" + id).attr("name", "zonename");
                            $("#editCancel-" + id).append('<input type="submit" value="Update" name="Save" id="edits-'+id+'" class="btn btn-success btn-xs save" /> <a class="btn btn-warning btn-xs" id="cancels-' + id + '" cancel" onclick="replaceRow(' + id + ');"><i class="fa fa-times"></i> Cancel</a>').show();
                            $("#editdelete-"+id).css("display","none");
                            $('#ref_divisionid-' + id + ' option[value=' + value.ref_divisionid + ']').prop("selected", "selected");
                        });
                    }
                }
            }
        });
    }

    function deleteSubDiv(id) {
        alert("Do you really want to delete this record ?")
        $.ajax({
            type: "post",
            url: '@Url.Action("DeleteSubDiv", "SubDiv")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                alert("Record successfully deleted");
                location.reload();
            }
        });
    }

    function addNewRow() {
        $("#newRow").html("");
        var appData = '';
        appData = '<td><select name="ref_divisionid" id="ref_divisionid" class="form-control" required><option value="">Select Division</option>@foreach(DataRow corp in Model.resultData.Rows){<option value="@corp[0]">@corp[2]</option>}</select></td>' +
                  '<td><input type="text" name="subdivisioncode" id="subdivisioncode" placeholder="Sub Division Code" class="form-control" required/></td>' +
                  '<td><input type="text" name="subdivisionname" id="subdivisionname" placeholder="Sub Division Name" class="form-control" required/></td>' +
                  '<td><input type="submit" value="Save" class="btn btn-success btn-xs save" name="Save" /> <a class="btn btn-warning btn-xs cancel" onclick="removeRow();"><i class="fa fa-times"></i> Cancel</a></td>';

        $("#newRow").append(appData);
        $("#newRow").css("display", "table-row");
    }

    function removeRow() {
        $("#newRow").css("display", "none");
    }

    function replaceRow(id) {
        $(".edit").removeAttr("disabled", "disabled");
        $("#ref_divisionid-" + id).css("display", "none");
        $("#div_name-" + id).css("display", "block");

        $("#hdnsdcodes-" + id).attr("type", "hidden");
        $("#sdcodes-" + id).css("display", "block");

        $("#hdnsdname-" + id).attr("type", "hidden");
        $("#sdname-" + id).css("display", "block");

        $("#editCancel-" + id).css("display", "none");
        $("#editdelete-" + id).css("display", "block");
    }
</script>
