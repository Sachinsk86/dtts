@model WebApp1._0.Models.DBContext
@using System.Data;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <div class="widget flat radius-bordered">
                        <div class="widget-header bg-blue">
                            <span class="widget-caption">Division</span>
                        </div>
                        <div class="widget-body">
                            <div id="registration-form">
                                <!--<div class="form-title">User Information</div>-->
                                @using (Html.BeginForm("SaveDiv", "Division", FormMethod.Post))
                                {
                                    <div class="table-toolbar">
                                        <a id="editabledatatable_new" class="btn btn-success" onclick="addNewRow();">
                                            Add New Division
                                        </a>
                                    </div>
                                    <table class="table table-striped table-bordered table-hover" id="simpledatatable">
                                        <thead>
                                            <tr>
                                                <th>Circle Name</th>
                                                <th>Division Code</th>
                                                <th>Division Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                
                                            @foreach (DataRow rows in Model.resultView.Rows)
                                            {
                                                <tr id="newRow">
                                                    <input type="hidden" name="divisionid" id="divisionid" value="" />
                                                    <td>
                                                        <label id="cir_name-@rows[0]">@rows[4]</label>
                                                        <span id="circle-@rows[0]"></span>
                                                    </td>
                                                    <td id="code-@rows[0]">
                                                        <label id="dcodes-@rows[0]">@rows[1]</label>
                                                        <input type="hidden" id="hdndcodes-@rows[0]" value="@rows[1]" class="form-control" />
                                                    </td>
                                                    <td id="name-@rows[0]">
                                                        <label id="dname-@rows[0]">@rows[2]</label>
                                                        <input type="hidden" id="hdndname-@rows[0]" value="@rows[2]" class="form-control" />
                                                    </td>
                                                    <td>
                                                        <span id="editdelete-@rows[0]">
                                                            <a class="btn btn-info btn-xs edit" id="edit-@rows[0]" onclick="editdivision(@rows[0]);"><i class="fa fa-edit"></i> Edit</a>
                                                            <a class="btn btn-danger btn-xs delete" id="delete-@rows[0]" onclick="deleteDiv(@rows[0]);"><i class="fa fa-trash-o"></i> Delete</a>
                                                        </span>
                                                        
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#simpledatatable').DataTable();
        var message = '@Model.usermessage';
        if (message != null && message != "") {
            alert(message);
        }
    });
    function editdivision(id) {
        $.ajax({
            type: "post",
            url: '@Url.Action("EditDivision", "Division")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                if (data.obj_div != '') {
                    $(".edit").attr("disabled", "disabled");
                    $("#divisionid").val(id);
                    $("#circle-" + id).html("");
                    $("#circle-" + id).append('<select name="ref_circleid" id="ref_circleid-' + id + '" class="form-control" required><option value="">Select Corporate</option>@foreach(DataRow corp in Model.resultData.Rows){<option value="@corp[0]">@corp[2]</option>}</select>').show();
                    $("#cir_name-" + id).css("display", "none");
                    $.each($.parseJSON(data.obj_div), function (key, value) {
                        $("#dcodes-" + id).css("display", "none");
                        $("#hdndcodes-" + id).attr("type", "text");
                        $("#hdndcodes-" + id).attr("name", "zonecode");
                        $("#dname-" + id).css("display", "none");
                        $("#hdndname-" + id).attr("type", "text");
                        $("#hdndname-" + id).attr("name", "zonename");
                        $("#editdelete-" + id).append('<input type="submit" value="Update" name="Save" id="edits-' + id + '" class="btn btn-success btn-xs save" /> <a class="btn btn-warning btn-xs" id="cancels-' + id + '" cancel" onclick="replaceRow(' + id + ');"><i class="fa fa-times"></i> Cancel</a>').show();
                        $("#edit-" + id).css("display", "none");
                        $("#delete-" + id).css("display", "none");
                        $('#ref_circleid-' + id + ' option[value=' + value.ref_circleid + ']').prop("selected", "selected");
                    });
                }
            }
        });
    }
    function deleteDiv(id) {
        alert("Do you really want to delete this record ?")
        $.ajax({
            type: "post",
            url: '@Url.Action("DeleteDiv", "Division")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                alert("Record successfully deleted");
                location.reload();
            }
        });
    }

    function addNewRow() {
        $("#newRow").html("");
        var appData = '';
        appData = '<td><select name="ref_circleid" id="ref_circleid" class="form-control" required><option value="">Select Circle</option>@foreach(DataRow corp in Model.resultData.Rows){<option value="@corp[0]">@corp[2]</option>}</select></td>' +
                  '<td><input type="text" name="divisioncode" id="divisioncode" placeholder="Division Code" class="form-control" required/></td>' +
                  '<td><input type="text" name="divisionname" id="divisionname" placeholder="Division Name" class="form-control" required/></td>' +
                  '<td><input type="submit" value="Save" class="btn btn-success btn-xs save" name="Save" /> <a class="btn btn-warning btn-xs cancel" onclick="removeRow();"><i class="fa fa-times"></i> Cancel</a></td>';

        $("#newRow").append(appData);
        $("#newRow").css("display", "table-row");
    }

    function removeRow() {
        $("#newRow").css("display", "none");
    }
    function replaceRow(id) {
        $(".edit").removeAttr("disabled", "disabled");
        $("#ref_circleid-" + id).css("display", "none");
        $("#cir_name-" + id).css("display", "block");


        $("#hdndcodes-" + id).attr("type", "hidden");
        $("#dcodes-" + id).css("display", "block");

        $("#hdndname-" + id).attr("type", "hidden");
        $("#dname-" + id).css("display", "block");

        $("#edits-" + id).css("display", "none");
        $("#cancels-" + id).css("display", "none");

        $("#edit-" + id).show();
        $("#delete-" + id).show();
    }
</script>





