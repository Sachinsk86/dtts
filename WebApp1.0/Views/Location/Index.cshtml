@model WebApp1._0.Models.DBContext
@using System.Data;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="widget flat radius-bordered nav-tabs-custom">
                    <div class="col-lg-12 col-sm-12 col-xs-12">
                        <ul id="myTab" class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#location">Create Location</a></li>
                            <li class="tab-red"><a data-toggle="tab" href="#location_list">Location List</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="location" class="tab-pane in active">
                                <div id="registration-form">
                                    @using (Html.BeginForm("Index", "Location", FormMethod.Post))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Zone</h6>
                                                        <select id="zone" name="ref_zoneid" style="width:100%;">
                                                            <option value="">Select Zone</option>
                                                            @foreach (DataRow zn in Model.resultData.Rows)
                                                            {
                                                                <option value="@zn[0]">@zn[2]</option>
                                                            }
                                                        </select>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Circle</h6>
                                                        <select id="circle" name="ref_circleid" style="width:100%;"></select>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Division</h6>
                                                        <select id="division" name="ref_divisionid" style="width:100%;"></select>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Sub Division</h6>
                                                        <select id="subdivision" name="ref_subdivisionid" style="width:100%;"></select>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Section</h6>
                                                        <select id="section" name="ref_sectionid" style="width:100%"></select>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Location Code</h6>
                                                        <input type="text" class="form-control" name="locationcode" id="locationcode">
                                                        @*<select id="tcode" style="width:100%"></select>*@
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <span class="input-icon icon-right">
                                                        <h6>Location Name</h6>
                                                        <input type="text" class="form-control" name="locationname" id="locationname">
                                                        @*<select id="tcode" style="width:100%"></select>*@
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="wide" />
                                        <input type="hidden" name="locationid" id="locationid" value="" />
                                        <input type="hidden" name="cirId" id="cirId" value="" />
                                        <input type="hidden" name="divId" id="divId" value="" />
                                        <input type="hidden" name="subDivId" id="subDivId" value="" />
                                        <input type="hidden" name="secId" id="secId" value="" />
                                        <input type="submit" id="loc_id" name="Submit" value="Submit" class="btn btn-success" />
                                    }
                                </div>
                            </div>
                            <div id="location_list" class="tab-pane">
                                <div class="widget-body">
                                    <table class="table table-striped table-bordered table-hover" id="simpledatatable">
                                        <thead>
                                            <tr>
                                                <th>Sl No.</th>
                                                <th>Location Name</th>
                                                <th>Zone Name</th>
                                                <th>Circle Name</th>
                                                <th>Division Name</th>
                                                <th>Subdivision Name</th>
                                                <th>Section Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow rows in Model.resultView.Rows)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@rows[2]</td>
                                                    <td>@rows[3]</td>
                                                    <td>@rows[4]</td>
                                                    <td>@rows[5]</td>
                                                    <td>@rows[6]</td>
                                                    <td>@rows[7]</td>
                                                    <td>
                                                        <a class="btn btn-info btn-xs edit" title="Edit" onclick="editLocationsDetails(@rows[0]);"><i class="fa fa-edit"></i></a>
                                                        <a class="btn btn-danger btn-xs delete" title="Delete" onclick="deleteUser(@rows[0]);"><i class="fa fa-trash-o"></i></a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#simpledatatable').DataTable();
        var message = '@Model.usermessage';
        if (message != null && message != "") {
            alert(message);
        }
    });


    $("#zone").change(function () {
        var zoneId = $("#zone").val();
        $.ajax({
            type: "post",
            url: '@Url.Action("GetCircle", "Dashboard")',
            data: { ZoneId: zoneId },
            datatype: "json",
            success: function (data) {
                if (data.obj_circle != "") {
                    $("#circle").html("");
                    var appData = '';
                    var circId = $("#cirId").val();
                    appData += '<option value="">Select Circle</option>';
                    $.each(data.obj_circle, function (key, value) {
                        appData += '<option value="' + value.circleid + '">' + value.circlename + '</option>';
                    });
                    $("#circle").append(appData);
                    if (circId != "" && circId != 0) {
                        $("#circle option[value='" + circId + "']").prop("selected", "selected");
                        $("#circle").trigger("change");
                    }
                }
            }
        });
    });

    $("#circle").change(function () {
        var circleId = $("#circle").val() ;
        $.ajax({
            type: "post",
            url: '@Url.Action("GetDivision", "Dashboard")',
            data: { circleId: circleId },
            datatype: "json",
            success: function (data) {
                if (data.obj_circle != "") {
                    $("#division").html("");
                    var appData = '';
                    var divId = $("#divId").val();
                    appData += '<option value="">Select Division</option>';
                    $.each(data.obj_division, function (key, value) {
                        appData += '<option value="' + value.divisionid + '">' + value.divisionname + '</option>';
                    });
                    $("#division").append(appData);
                    if (divId != "" && divId != 0) {
                        $("#division option[value='" + divId + "']").prop("selected", "selected");
                        $("#division").trigger("change");
                    }
                }
            }
        });
    });



    $("#division").change(function () {
        var divisionId = $("#division").val();
        $.ajax({
            type: "post",
            url: '@Url.Action("GetSubDivision", "Dashboard")',
            data: { divisionId: divisionId },
            datatype: "json",
            success: function (data) {
                if (data.obj_subdivision != "") {
                    $("#subdivision").html("");
                    var appData = '';
                    var sbId = $("#subDivId").val();
                    appData += '<option value="">Select Sub Division</option>';
                    $.each(data.obj_subdivision, function (key, value) {
                        appData += '<option value="' + value.subdivisionid + '">' + value.subdivisionname + '</option>';
                    });
                    $("#subdivision").append(appData);
                    if (sbId != "" && sbId != 0) {
                        $("#subdivision option[value='" + sbId + "']").prop("selected", "selected");
                        $("#subdivision").trigger("change");
                    }
                }
            }
        });
    });

    $("#subdivision").change(function () {
        var subdivisionId = $("#subdivision").val();
        $.ajax({
            type: "post",
            url: '@Url.Action("GetSection", "Dashboard")',
            data: { subdivisionId: subdivisionId },
            datatype: "json",
            success: function (data) {
                if (data.obj_section != "") {
                    $("#section").html("");
                    var appData = '';
                    var scId = $("#secId").val();
                    appData += '<option value="">Select Section</option>';
                    $.each(data.obj_section, function (key, value) {
                        appData += '<option value="' + value.sectionid + '">' + value.sectionname + '</option>';
                    });
                    $("#section").append(appData);
                    if (scId != "" && scId != 0) {
                        $("#section option[value='" + scId + "']").prop("selected", "selected");
                    }
                }
            }
        });
    });

    function editLocationsDetails(id) {
        $.ajax({
            type: "post",
            url: '@Url.Action("getLocationOnId", "Location")',
            data: { id: id },
            datatype: "json",
            success: function (data) {
                if (data.obj_loc != '') {
                    $('#location').addClass('active');
                    $("#location_list").removeClass('active');
                    $.each($.parseJSON(data.obj_loc), function (key, value) {
                        $("#loc_id").attr("value", "Update");
                        $("#locationid").val(value.locationid);
                        $("#zone option[value='" + value.ref_zoneid + "']").prop("selected", "selected");
                        $("#zone").trigger("change");

                        $("#circle option[value='" + value.ref_circleid + "']").prop("selected", "selected");
                        $("#cirId").val(value.ref_circleid);
                        $("#circle").trigger("change");

                        $("#division option[value='" + value.ref_divisionid + "']").prop("selected", "selected");
                        $("#divId").val(value.ref_divisionid);
                        $("#division").trigger("change");

                        $("#subdivision option[value='" + value.ref_subdivisionid + "']").prop("selected", "selected");
                        $("#subDivId").val(value.ref_subdivisionid);
                        $("#subdivision").trigger("change");

                        $("#section option[value='" + value.ref_sectionid + "']").prop("selected", "selected");
                        $("#secId").val(value.ref_sectionid);
                        $("#locationcode").val(value.locationcode);
                        $("#locationname").val(value.locationname);
                    });

                }
            }
        });
    }
</script>





